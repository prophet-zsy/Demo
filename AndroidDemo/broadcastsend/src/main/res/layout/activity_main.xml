<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:text="给静态注册的接收器发送隐式广播"
        android:onClick="sendBroadCast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="给静态注册的接收器发送显示广播"
        android:onClick="sendBroadCast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="给动态注册的接收器发送隐式广播"
        android:onClick="sendBroadCast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="给动态注册的接收器发送显式广播"
        android:onClick="sendBroadCast4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>